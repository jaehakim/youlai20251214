{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // 严格性그리고유형확인相关설정
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // 모듈그리고兼容性相关설정
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // 调试그리고兼容性相关설정
    "sourceMap": true,
    "useDefineForClassFields": true,
    "allowJs": true,

    // 유형声明相关설정
    "types": ["node", "vite/client", "element-plus/global"]
  },

  "include": [
    "mock/**/*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "vite.config.ts",
    "eslint.config.ts",
    "uno.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
